@model Client

<div class="max-w-md mx-auto bg-white p-6 rounded-md shadow-md mt-8">
    <h1 class="text-2xl font-semibold mb-6">Modifier un client</h1>

    <form method="post" asp-action="Edit" class="space-y-4">
        <!-- IdClient -->
        <input asp-for="IdClient" type="hidden" />

        <!-- NomComplet -->
        <div>
            <label asp-for="NomComplet" class="block text-sm font-medium text-gray-600">Nom</label>
            <input asp-for="NomComplet" id="nomcomplet" name="NomComplet" class="mt-1 p-2 w-full border rounded-md">
        </div>

        <!-- Bouton Modifier -->
        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 focus:outline-none focus:ring focus:border-blue-300">
            Modifier
        </button>
    </form>
</div>