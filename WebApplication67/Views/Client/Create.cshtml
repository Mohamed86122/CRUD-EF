@model WebApplication67.Models.Client

<div class="max-w-md mx-auto bg-white p-6 rounded-md shadow-md mt-8">
    <h1 class="text-2xl font-semibold mb-6">Ajouter un client</h1>

    <form method="post" asp-action="Create" class="space-y-4">
        <!-- Nom -->
        <div class="form-group">
            <label asp-for="NomComplet" class="block text-sm font-medium text-gray-600">Nom</label>
            <input asp-for="NomComplet" class="form-control" />
            <span asp-validation-for="NomComplet" class="text-danger"></span>
        </div>

        <!-- Bouton Ajouter -->
        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 focus:outline-none focus:ring focus:border-blue-300">
            Ajouter
        </button>
    </form>
</div>